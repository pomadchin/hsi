{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stac-extensions.github.io/hsi/v1.0.0/schema.json",
  "title": "Layer Extension",
  "description": "STAC Layer Item Extension Spec",
  "allOf": [
    {
      "$ref": "#/definitions/hsi"
    }
  ],
  "definitions": {
    "hsi": {
      "type": "object",
      "required": [
        "stac_extensions",
        "properties"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "https://stac-extensions.github.io/hsi/v1.0.0/schema.json"
          }
        },
        "properties": {
          "type": "object",
          "required": [
            "hsi:wavelength_min",
            "hsi:wavelength_max"
          ],
          "properties": {
            "hsi:wavelength_min": {
              "title": "Min center wavelength",
              "type": "number"
            },
            "hsi:wavelength_max": {
              "title": "Max center wavelength",
              "type": "number"
            }
          }
        }
      }
    }
  }
}
